QWidget#main_widget{
	background-color: #0D101B;
	color: #AAAAAA;
}
QWidget#screen_widget
{
	color : #CCCCCC;
	background-color : #161A28;
	margin-top : -10px;
}
QWidget#content_box{
	background : #101422;
}
QWizard{
	background-color : #101422;
}
QWizardPage{
	background-color : #101422;
}


QPushButton{
	border-top-right-radius: 10px;
	border-bottom-right-radius: 0px; 
	font-size : 20px;
	text-align : center; 	
	border : 1px solid #ADFF2F;
	background-color : #171B1F;
	color : #62C9F3;
	width : 150px;
	height : 40px;
}
QPushButton::focus
{
	color : #23B2EE;
	background-color : #2B2C39 ;
}
QPushButton::hover::focus
{
	color : #23B2EE;
	background-color : #2B2C39 ;
}
QPushButton::pressed
{
	color : #23B2EE;
	background-color : #202428;
}
QPushButton::hover
{
	color : #0892D0;
	background-color : #202428 ;
}
QPushButton::disabled{
	color: #E91E63;
}
QPushButton::!enabled{
	color: #E91E63;
}

QRadioButton{
	color : #999999;
}
QRadioButton::indicator{
	width :16px;
	height: 16px;
	border-radius : 8px;
}
QRadioButton::indicator::unchecked{
	image: url(./Elements/radio_unchecked.png);
}
QRadioButton::indicator::checked{
	image: url(./Elements/radio_checked.png);
}

QLineEdit
{
	border : none;
	height : 30px;
	background : #101422;
	color : #AAAAAA;
	padding-left : 5px;
	border-bottom : 1px solid #ADFF2F;
}
QLineEdit::focus
{
	border-bottom : 3px solid #ADFF2F;
}
QLineEdit::focus::hover
{
	border-bottom : 3px solid #ADFF2F;
}
QLineEdit::hover
{
	border-bottom : 2px solid #ADFF2F;
}


QMessageBox{
	background-color : #808080;
	color: #FFFFFF;
}


QLabel#main_screen_heading{
	color : #ADFF2F;
	font-size : 26px;
}
QLabel#main_screen_sub_heading{
	color : #23B2EE;
	font-size : 18px;
}
QLabel#main_screen_sub_heading2{
	color : #E91E63;
	font-size : 18px;
}
QLabel#main_screen_content{
	color : #DDDDDD;
	font-size : 15px;
}

QDialog{
	background-color : #181B25;
}
QDialog QLabel{
	color : #AAAAAA;
}
QDialog QPushButton{
	text-align : center;
	background-color : #171B1F ; 
	color : #AAAAAA;
}


QComboBox
{
	background : #2D353D;
	color : #AAAAAA;
	border: 1px solid #181B25;
    border-radius: 3px;
    height : 30px;
}
QComboBox::drop-down 
{
	background : #777777;
    subcontrol-origin: padding;
    subcontrol-position: top right;
    border-left-width: 1px;
    border-left-color: darkgray;
    border-left-style: solid; 
    border-top-right-radius: 3px;
    border-bottom-right-radius: 3px;
}
QComboBox QAbstractItemView 
{		/* This is the style of dropdown menu*/
    background-color : #181B25;
	color : #AAAAAA;
	border : 1px solid #2D353D;
	selection-background-color : #181B25;
}
QComboBox::down-arrow 
{
    image: url(./Elements/down_arrow.png);
    width: 10px;
    height: 10px;
}


QTextEdit
{
	background : #2D353D;
	color : #AAAAAA;
}


QToolTip
{
	color : #AAAAAA;
	background : #2D353D;
}


QScrollArea{
	border : 0px;
}
QScrollArea QWidget
{
	background-color : #101422;
	border : 0px;
}
QScrollArea QTextEdit
{
	background : #2D353D;
	color : #AAAAAA;
}
QScrollArea QLineEdit
{
	height : 30px;
	background : #2D353D;
	color : #AAAAAA;
	border : 1px solid #181B25;
}
QScrollArea QPushButton{
	border-top-right-radius: 10px;
	border-bottom-right-radius: 0px; 
	font-size : 20px;
	text-align : center; 	
	border : 1px solid #ADFF2F;
	background-color : #171B1F;
	color : #62C9F3;
	width : 150px;
	height : 40px;
}
QScrollArea QPushButton::focus
{
	color : #23B2EE;
	background-color : #2B2C39 ;
}
QScrollArea QPushButton::hover::focus
{
	color : #23B2EE;
	background-color : #2B2C39 ;
}
QScrollArea QPushButton::pressed
{
	color : #23B2EE;
	background-color : #202428;
}
QScrollArea QPushButton::hover
{
	color : #0892D0;
	background-color : #202428 ;
}


QTableView
{
	background-color : #181B25;
	alternate-background-color : #1E222E;
	color : #AAAAAA;
	border : 0px;
	selection-background-color : #121520;
}
QTableView::item:selected
{
	border : 2px solid #0891D4;
}
QHeaderView::section
{ 
	background-color : #181B25;
	color: #E91E63;	
}

QScrollBar:horizontal
{
	height : 0px;
}
QScrollBar:vertical{
	margin-left : 1px;
	width : 25px;
	background-color : #181B25;	
	border: 1px solid #121212;
}
QScrollBar::handle:vertical{
	background : qlineargradient( spread:Reflect, x1:0, y1:0, x2:0, y2:1 , stop:0 #181B25, stop:0.5 #38424C, stop:1 #181B25);
	width : 25px;
	min-height : 70px;
	margin-left : 0px;
	margin-top : 1px;
	margin-bottom : 1px;
	margin-right : 0px;
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
	width : 0px;
	height : 0px;
}